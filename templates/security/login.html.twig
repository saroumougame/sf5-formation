{% extends 'base.html.twig' %}

{% block main %}
    <section class="bg-light mt-5">
        <div class="container pb-5 pt-5">
            <div class="row align-items-center">
                <div class="col-lg-5">
                    <h1 class="font-weight-bold display-4 mt-5 ml-2 mb-5">Log in to your account.</h1>

                    <form class="form-signin" method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        <label for="inputPassword">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                        {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                        #}

                        <button class="btn btn-lg btn-primary" type="submit">
                            Sign in
                        </button>

                        <div class="col-12 m-2">
                            <p>
                                <a href="/password-recovering.html" title="Get a new password sent by email">Forgotten your password ? <i class="far fa-arrow-alt-circle-right"></i></a>
                                <br>
                                <a href="/register" title="Create an account to SensioTV">Don't have an account ? Create one now. <i class="far fa-arrow-alt-circle-right"></i></a>
                            </p>
                        </div>
                    </form>


                </div>
                <div class="col-lg-5 offset-lg-2 text-center">
                    <img class="img-fluid img-rounded" src="/assets/images/sensiolabs-university-icon.png" alt="SensioLabs University Logo">
                </div>
            </div>
        </div>
    </section>
{% endblock %}